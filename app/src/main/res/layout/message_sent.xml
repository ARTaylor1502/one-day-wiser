<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/trophy_toast_layout_root"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:background="@color/colorSecondary" >

    <ImageView android:id="@+id/owl_icon"
               android:src="@drawable/owl_icon"
               android:layout_width="150dp"
               android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <TextView android:id="@+id/message_sent_text"
                  android:text="Message Sent"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/textAlternateDark"
                  android:textSize="@dimen/font_size_toast_heading"/>

    </LinearLayout>

</LinearLayout>