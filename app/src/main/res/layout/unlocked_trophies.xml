<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/trophy_toast_layout_root"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:background="@color/colorSecondary" >

    <ImageView android:id="@+id/trophy_image"
               android:src="@drawable/owl_icon_tipped_hat"
               android:layout_width="150dp"
               android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <TextView android:id="@+id/trophy_feedback_heading"
                  android:text="Congratulations"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/textAlternateDark"
                  android:textSize="@dimen/font_size_toast_heading"/>
        <TextView android:id="@+id/trophy_feedback_subheading"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="15dp"
                  android:textColor="@color/textAlternateDark"
                  android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/new_trophies">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>