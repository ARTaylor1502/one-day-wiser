<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/frame"
             tools:context=".AquariumFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/aquarium"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_items_row"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.33"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:layout_marginBottom="45dp"
                android:id="@+id/bottom_left_item"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.33"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:layout_marginBottom="45dp"
                android:id="@+id/bottom_center_item"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.33"
                android:scaleType="fitEnd"
                android:layout_gravity="bottom"
                android:layout_marginBottom="45dp"
                android:id="@+id/bottom_right_item"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bottom_items_row"
            android:layout_gravity="bottom"
            android:scaleType="fitEnd"
            android:src="@drawable/pebbles"/>

    </RelativeLayout>

</FrameLayout>
