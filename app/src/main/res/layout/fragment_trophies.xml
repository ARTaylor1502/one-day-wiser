<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="@dimen/page_padding"
             tools:context="onedaywiser.TrophiesFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/trophy_row1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:weightSum="1.0">
            </LinearLayout>

            <ImageView
                android:id="@+id/trophy_shelf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trophy_row1"
                android:adjustViewBounds="true"
                android:src="@drawable/trophy_shelf"/>

            <LinearLayout
                android:id="@+id/trophy_row2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/trophy_shelf1"
                android:orientation="horizontal"
                android:weightSum="1.0">
            </LinearLayout>

            <ImageView
                android:id="@+id/trophy_shelf2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trophy_row2"
                android:adjustViewBounds="true"
                android:src="@drawable/trophy_shelf"/>

            <LinearLayout
                android:id="@+id/trophy_row3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/trophy_shelf2"
                android:orientation="horizontal"
                android:weightSum="1.0">
            </LinearLayout>

            <ImageView
                android:id="@+id/trophy_shelf3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trophy_row3"
                android:adjustViewBounds="true"
                android:src="@drawable/trophy_shelf"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
